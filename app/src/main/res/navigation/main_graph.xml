<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_graph">

    <activity
        android:id="@+id/chatActivity"
        android:name="com.maveri.aimessenger.ui.chat.ChatActivity"
        tools:layout="@layout/activity_chat" >
        <argument
            android:name="roomId"
            app:argType="string"
            app:nullable="true"
            android:defaultValue="@null" />
        <argument
            android:name="isMyRoom"
            app:argType="boolean"
            android:defaultValue="false" />
    </activity>
    <fragment
        android:id="@+id/dialogViewFragment"
        android:name="com.maveri.aimessenger.ui.main.DialogViewFragment"
        android:label="DialogViewFragment" >
        <action
            android:id="@+id/action_dialogViewFragment_to_chatActivity"
            app:destination="@id/chatActivity" />
        <action
            android:id="@+id/action_dialogViewFragment_to_mainActivity"
            app:destination="@id/mainActivity" />
    </fragment>
    <activity
        android:id="@+id/mainActivity"
        android:name="com.maveri.aimessenger.ui.main.MainActivity"
        android:label="activity_main"
        tools:layout="@layout/activity_main" />

</navigation>